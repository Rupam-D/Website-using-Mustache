<!DOCTYPE html>
<html lang="en">

<head>
     {{>headerlinks}}
</head>

<body>
     <div class="container_fluid main_menu">
          <div class="row">
               <div class="col-md-10 col-12 mx-auto">
                    <!-- Navbar -->

                    {{>navbar}}
                    <!-- Main Body -->
                    <div class="container_fluid main_header">
                         <div class="row">
                              <div class="col-md-10 col-12 mx-auto">
                                   <div class="row">
                                        <!-- left div -->
                                        <div class="col-md-6 col-12 main_header_left ">
                                             <p>Welcome to Weather app</p>
                                             <h1>Get The Latest <span>Weather</span> Info at Your ease</h1>
                                             <a href="/weather"> <button>Check Now</button></a>
                                        </div>
                                        <!-- Right div -->
                                        <div class="col-md-6 col-12 main_header_right ">
                                             <!-- carousel -->
                                             <div id="carouselExampleControls" class="carousel slide"
                                                  data-ride="carousel">
                                                  <div class="carousel-inner">
                                                       <div class="carousel-item active">
                                                            <img src="assets/1.svg" class=" w-100" alt="...">
                                                       </div>
                                                       <div class="carousel-item">
                                                            <img src="assets/2.svg" class=" w-100" alt="...">
                                                       </div>
                                                       <div class="carousel-item">
                                                            <img src="assets/3.svg" class=" w-100" alt="...">
                                                       </div>
                                                       <div class="carousel-item">
                                                            <img src="assets/4.svg" class=" w-100" alt="...">
                                                       </div>
                                                  </div>
                                                  <button class="carousel-control-prev" type="button"
                                                       data-target="#carouselExampleControls" data-slide="prev">
                                                       <span class="carousel-control-prev-icon"
                                                            aria-hidden="true"></span>
                                                       <span class="sr-only">Previous</span>
                                                  </button>
                                                  <button class="carousel-control-next" type="button"
                                                       data-target="#carouselExampleControls" data-slide="next">
                                                       <span class="carousel-control-next-icon"
                                                            aria-hidden="true"></span>
                                                       <span class="sr-only">Next</span>
                                                  </button>
                                             </div>

                                        </div>
                                   </div>
                              </div>
                         </div>
                    </div>

                    <!-- Footer -->
                    {{>footer}}

</body>

</html>